<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phone1000.martialstudyself.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/icon" />

            <ImageView
                android:id="@+id/main_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/main_personal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:src="@mipmap/icon" />

            <ImageView
                android:id="@+id/main_personal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/icon" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="60dp" />


    <RadioGroup
        android:id="@+id/main_controller"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_page"
            style="@style/Btn_style"
            android:checked="true"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="首页"
            android:textColor="@drawable/text_selector" />

        <RadioButton
            android:id="@+id/book"
            style="@style/Btn_style"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="功法秘籍"
            android:textColor="@drawable/text_selector" />

        <RadioButton
            android:id="@+id/martial_hundred"
            style="@style/Btn_style"
            android:drawableTop="@drawable/cyclopedia_icom"
            android:text="武术百科"
            android:textColor="@drawable/text_selector" />

        <RadioButton
            android:id="@+id/talk_martial"
            style="@style/Btn_style"
            android:drawableTop="@drawable/comment_icon"
            android:text="论武堂"
            android:textColor="@drawable/text_selector" />
    </RadioGroup>

</FrameLayout>
