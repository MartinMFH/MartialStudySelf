<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorSkin"
    android:layout_height="match_parent"
    tools:context="com.phone1000.martialstudyself.activitys.ItemActivity">


    <RelativeLayout
        android:id="@+id/activity_item_rl_1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/home_second_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:onClick="backSecondClick"
            android:layout_centerVertical="true"
            android:layout_margin="7dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/comment_condition"
            android:textColor="#333333"
            android:textSize="22dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_item_rl_1"
        android:layout_marginBottom="55dp"
        android:background="#f4f1f1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/activity_item_rl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <ImageView
                    android:id="@+id/home_second_image"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/no_headimg" />

                <TextView
                    android:id="@+id/home_second_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/home_second_image"
                    android:textColor="@color/blueDefault"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/home_second_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/home_second_name"
                    android:layout_below="@+id/home_second_name"
                    android:layout_marginTop="11dp" />

                <TextView
                    android:id="@+id/activity_item_lou_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1楼" />

                <TextView
                    android:id="@+id/home_second_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_second_image"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/blackDefault"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_second_context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_second_title"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/blackText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/home_second_context"
                    android:layout_marginLeft="-16dp"
                    android:layout_marginRight="-16dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/grayDefault" />

            </RelativeLayout>


            <WebView
                android:id="@+id/home_second_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_item_rl_2"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="10dp"
                android:background="#f4f1f1" />

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:background="@color/grayDefault" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="#ffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/activity_item_reply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:drawableLeft="@mipmap/write"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="  回复楼主" />


        </android.support.v7.widget.CardView>


    </LinearLayout>
</RelativeLayout>
